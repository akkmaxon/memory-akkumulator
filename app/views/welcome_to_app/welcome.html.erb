<div class="jumbotron text-center">
  <h1>Welcome to Memory Akkumulator</h1>
  <p>This app is used for storing and viewing articles, notes and etc.</p>
  <%= form_for(:user, url: {controller: "/devise/sessions", action: "create"}) do |f| %>
    <%= f.email_field :email, value: "user@example.com", hidden: true %>
    <%= f.password_field :password, value: "password", hidden: true %>
    <%= f.submit "Try it in action", class: "btn btn-success btn-lg", style: "color: white" %>
  <% end %>
  <hr>
  <%= link_to "Sign up", new_user_registration_path , class: "btn btn-primary btn-lg", style: "color: white; margin-right: 20px" %>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
</div>
