<div class="jumbotron text-center">
  <h1><%= t('.welcome') %></h1>
  <p><%= t('.description') %></p>
  <%= form_for(:user, url: {controller: "/devise/sessions", action: "create"}) do |f| %>
    <%= f.email_field :email, value: "user@example.com", hidden: true %>
    <%= f.password_field :password, value: "password", hidden: true %>
    <%= f.submit t('.try_it'), class: "btn btn-success btn-lg", style: "color: white" %>
  <% end %>
  <hr>
  <%= link_to t('.sign_up'), new_user_registration_path , class: "btn btn-primary btn-lg", style: "color: white; margin-right: 20px" %>
  <%= link_to t('.log_in'), new_user_session_path, class: "btn btn-default btn-lg" %>
</div>
