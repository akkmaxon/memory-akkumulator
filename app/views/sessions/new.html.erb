<div class="jumbotron">
<h1>Welcome</h1>

<% if flash.alert and flash.alert != "You need to sign in" %>
  <div class="alert">
    <%= flash.alert %>
  </div>
<% end %>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= email_field_tag :email, params[:email], placeholder: "Enter your email", required: true %>
  </div>

  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password, params[:password], placeholder: "Enter your password", required: true %>
  </div>
  
  <%= submit_tag "Sign in", class: "btn btn-default" %>
  <%= link_to "new user?", new_user_path %>
<% end %>
</div>
