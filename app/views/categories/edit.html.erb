<h1><%= t('.edit') %></h1>
<%= render 'form' %>
<hr>
<% @articles.each do |article| %>
  <div class="little_article">
    <h4><%= article.title %></h4>
    <small>
      <%= link_to t('.delete'), article, method: :delete, data: { confirm: t('.delete') + " \'#{article.title}\'?" } %>
    </small>
  </div>
<% end %>
