<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-collapsed" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
	  <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Akkwiki", root_path, class:"navbar-brand" %>
      </div>
      
      <% if current_user %>
      <div class="collapse navbar-collapse" id="header-collapsed">
        <ul class="nav navbar-nav">
          <li><%= link_to "Add article", new_article_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Category <span class="caret"></span></a>
            <ul class="dropdown-menu">
