<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <%= link_to 'Home', root_url, class: 'btn btn-link navbar-btn' %>
      <div class="btn-group">
        <a href="#" class="dropdown-toggle btn btn-link navbar-btn" data-toggle="dropdown" aria-expanded="false">Category <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% current_user_categories.each do |category| %>
            <li><%= link_to category.title, category_path(category) %></li>
	  <% end %>
	</ul>
      </div><!-- Category dropdown -->
      <div id="profile_button" class="btn-group">
        <a href="#" class="dropdown-toggle btn btn-link navbar-btn" data-toggle="dropdown" aria-expanded="false">
	  <span class="glyphicon glyphicon-menu-down"></span>
	</a>
        <ul class="dropdown-menu dropdown-menu-right">
	  <li>
            <%= form_tag search_path, method: :get do %>
              <%= text_field_tag :search, "", class: "form-control", style: 'width: 90%;margin: 0 0 -3px 5%', placeholder: "Search article" %>
            <% end %>
          </li>
          <li role="separator" class="divider"></li>
          <li><%= link_to 'Add article', new_article_path %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "Edit profile", edit_user_registration_path(current_user) %></li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div><!-- #profile_button-->
    </div>
  </nav>
</header>
