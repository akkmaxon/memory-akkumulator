<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
	<%= link_to t('.home'), articles_path, class: 'btn btn-link navbar-btn' %>
	<div class="btn-group hidden-md hidden-lg">
	  <a href="#" class="dropdown-toggle btn btn-link navbar-btn" data-toggle="dropdown" aria-expanded="false"><%= t('.categories') %> <span class="caret"></span></a>
	  <ul class="dropdown-menu">
	    <% current_user_categories.each do |category| %>
	      <li><%= link_to category.title, category_path(category) %></li>
	    <% end %>
	  </ul>
	</div>
	<button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="navbar">
	  <span class="sr-only">Toggle navigation</span>
	  <span class="icon-bar"></span>
	  <span class="icon-bar"></span>
	  <span class="icon-bar"></span>
	</button>
      </div>
      <div id="collapse" class="navbar-collapse collapse" aria-expanded="false">
        <ul class="nav navbar-nav">
          <li><%= link_to t('.add_article'), new_article_path, id: 'new-article-link' %></li>
	  <li>
            <%= form_tag search_path, method: :get do %>
              <%= text_field_tag :search, "", class: "form-control", placeholder: t('.search_article') %>
            <% end %>
          </li>
	</ul>
	<ul class="nav navbar-nav navbar-right">
          <li><%= link_to t('.edit_profile'), edit_user_registration_path %></li>
          <li><%= link_to t('.log_out'), destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>
